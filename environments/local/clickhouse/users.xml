<?xml version="1.0"?>
<clickhouse>
    <users>
        <!-- Default user for local development -->
        <default>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>

        <!-- Admin user -->
        <admin>
            <password>admin123</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
            <grants>
                <query>GRANT ALL ON *.* TO admin WITH GRANT OPTION</query>
            </grants>
        </admin>

        <!-- Read-only user for analytics -->
        <readonly>
            <password>readonly123</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>readonly</profile>
            <quota>default</quota>
        </readonly>
    </users>

    <profiles>
        <!-- Default profile -->
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <max_query_size>268435456</max_query_size>
            <max_ast_elements>50000</max_ast_elements>
            <max_expanded_ast_elements>500000</max_expanded_ast_elements>
            <readonly>0</readonly>
            <max_execution_time>60</max_execution_time>
            <min_execution_speed>1000000</min_execution_speed>
            <timeout_before_checking_execution_speed>10</timeout_before_checking_execution_speed>
            <max_columns_to_read>1000</max_columns_to_read>
            <max_temporary_columns>1000</max_temporary_columns>
            <max_temporary_non_const_columns>1000</max_temporary_non_const_columns>
            <max_subquery_depth>100</max_subquery_depth>
            <max_pipeline_depth>1000</max_pipeline_depth>
            <max_ast_depth>1000</max_ast_depth>
            <max_ast_elements>100000</max_ast_elements>
        </default>

        <!-- Read-only profile -->
        <readonly>
            <readonly>1</readonly>
            <max_memory_usage>5000000000</max_memory_usage>
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <max_query_size>268435456</max_query_size>
            <max_execution_time>300</max_execution_time>
            <min_execution_speed>100000</min_execution_speed>
            <timeout_before_checking_execution_speed>30</timeout_before_checking_execution_speed>
        </readonly>
    </profiles>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>