# Development Environment Variables
# Used by CI/CD and runtime

# Application
ENV=dev
LOG_LEVEL=info
PORT=8080

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ClickHouse Configuration (Managed Service)
CLICKHOUSE_HOST=clickhouse-dev.cluster-xxx.us-east-1.rds.amazonaws.com:9000
CLICKHOUSE_HTTP_HOST=clickhouse-dev.cluster-xxx.us-east-1.rds.amazonaws.com:8123
CLICKHOUSE_DB=telemetry
CLICKHOUSE_USER=${CLICKHOUSE_USER_SECRET}
CLICKHOUSE_PASSWORD=${CLICKHOUSE_PASSWORD_SECRET}

# Redis Configuration (ElastiCache)
REDIS_HOST=playback-redis-dev.xxx.cache.amazonaws.com:6379
REDIS_PASSWORD=${REDIS_PASSWORD_SECRET}

# Kinesis Streams
KINESIS_STREAM_TRACES=playback-traces-dev
KINESIS_STREAM_METRICS=playback-metrics-dev
KINESIS_STREAM_LOGS=playback-logs-dev

# Lambda Functions
LAMBDA_TRACE_PROCESSOR=playback-trace-processor-dev
LAMBDA_METRICS_PROCESSOR=playback-metrics-processor-dev
LAMBDA_LOGS_PROCESSOR=playback-logs-processor-dev

# Security
JWT_SECRET=${JWT_SECRET_DEV}
ENCRYPTION_KEY=${ENCRYPTION_KEY_DEV}

# Monitoring
JAEGER_ENDPOINT=http://jaeger-dev.internal:14268/api/traces
PROMETHEUS_ENDPOINT=http://prometheus-dev.internal:9090

# Feature Flags
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_EXPERIMENTAL_FEATURES=true

# Performance
MAX_CONCURRENT_REQUESTS=1000
WORKER_POOL_SIZE=10
BATCH_SIZE=500