server:
  host: "localhost"
  port: 8080
  mode: "debug" # debug, release, test
  trusted_proxies: [] # List of trusted proxy IPs, empty for none

logging:
  level: "info" # debug, info, warn, error
  format: "json" # json, console

swagger:
  enabled: true
  title: "Playback Backend API"
  version: "1.0"
  description: "Distributed systems event replay backend"

database:
  host: "localhost"
  port: 5432
  name: "playback_db"
  user: "playback_user"
  password: "your_password_here"
  ssl_mode: "disable"

observability:
  jaeger:
    endpoint: "http://localhost:14268/api/traces"
  prometheus:
    enabled: true
    port: 9090