# Staging Environment Variables
# Production-like configuration for testing

# Application
ENV=staging
LOG_LEVEL=info
PORT=8080

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ClickHouse Configuration (Production-like)
CLICKHOUSE_HOST=clickhouse-staging.cluster-xxx.us-east-1.rds.amazonaws.com:9000
CLICKHOUSE_HTTP_HOST=clickhouse-staging.cluster-xxx.us-east-1.rds.amazonaws.com:8123
CLICKHOUSE_DB=telemetry
CLICKHOUSE_USER=${CLICKHOUSE_USER_SECRET}
CLICKHOUSE_PASSWORD=${CLICKHOUSE_PASSWORD_SECRET}

# Redis Configuration (Multi-AZ)
REDIS_HOST=playback-redis-staging.xxx.cache.amazonaws.com:6379
REDIS_PASSWORD=${REDIS_PASSWORD_SECRET}

# Kinesis Streams (Production-scale)
KINESIS_STREAM_TRACES=playback-traces-staging
KINESIS_STREAM_METRICS=playback-metrics-staging
KINESIS_STREAM_LOGS=playback-logs-staging

# Lambda Functions
LAMBDA_TRACE_PROCESSOR=playback-trace-processor-staging
LAMBDA_METRICS_PROCESSOR=playback-metrics-processor-staging
LAMBDA_LOGS_PROCESSOR=playback-logs-processor-staging

# Security (Production-level)
JWT_SECRET=${JWT_SECRET_STAGING}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}
ENABLE_AUTH=true
ENABLE_TLS=true

# Monitoring (Full observability)
JAEGER_ENDPOINT=http://jaeger-staging.internal:14268/api/traces
PROMETHEUS_ENDPOINT=http://prometheus-staging.internal:9090
ENABLE_DISTRIBUTED_TRACING=true
ENABLE_METRICS_COLLECTION=true

# Feature Flags (Production-ready features only)
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_PROFILING=false
ENABLE_EXPERIMENTAL_FEATURES=false

# Performance (Production-like load)
MAX_CONCURRENT_REQUESTS=5000
WORKER_POOL_SIZE=20
BATCH_SIZE=1000
CONNECTION_POOL_SIZE=50

# Data Retention (Production policies)
TRACES_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90
LOGS_RETENTION_DAYS=30